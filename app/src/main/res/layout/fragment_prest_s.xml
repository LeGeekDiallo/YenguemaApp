<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.PrestSFragment"
    tools:ignore="MissingClass">
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/prests_image_viewpager"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:id="@+id/dots_indicators"
                android:gravity="center"
                android:layout_marginTop="320dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </LinearLayout>
            <TextView
                android:id="@+id/prests_title"
                app:layout_constraintTop_toBottomOf="@+id/prests_image_viewpager"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HomeTitle"
                android:text="@string/sprest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/prests_title"
                style="@style/LogInText"
                android:text="@string/address"
                android:id="@+id/address"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:layout_width="340dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/prests_title"
                android:background="@color/primaryDarkColor"
                app:layout_constraintLeft_toRightOf="@+id/address"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_box"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/address">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/LogInText"
                    android:text="@string/city"
                    android:id="@+id/city"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_name"
                    style="@style/LogInText"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@+id/city"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/LogInText"
                    android:text="@string/municipality"
                    android:id="@+id/municipality"
                    app:layout_constraintTop_toBottomOf="@+id/city"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/municipality_name"
                    style="@style/LogInText"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@+id/municipality"
                    app:layout_constraintTop_toBottomOf="@+id/city"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/LogInText"
                    android:text="@string/district"
                    android:id="@+id/district"
                    app:layout_constraintTop_toBottomOf="@+id/municipality"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district_name"
                    style="@style/LogInText"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@+id/district"
                    app:layout_constraintTop_toBottomOf="@+id/municipality"
                    android:layout_marginStart="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/address_box"
                style="@style/LogInText"
                android:text="@string/contact"
                android:id="@+id/contact"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:layout_width="340dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/address_box"
                android:background="@color/primaryDarkColor"
                app:layout_constraintLeft_toRightOf="@+id/contact"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_box"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/contact">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/LogInText"
                    android:text="@string/email"
                    android:id="@+id/email"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_address"
                    style="@style/LogInText"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@+id/email"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/LogInText"
                    android:text="@string/p_phone_number"
                    android:id="@+id/phonenumber"
                    app:layout_constraintTop_toBottomOf="@+id/email"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_phonenumber"
                    style="@style/LogInText"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@+id/phonenumber"
                    app:layout_constraintTop_toBottomOf="@+id/email"
                    android:layout_marginStart="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/contact_box"
                android:orientation="horizontal"
                android:id="@+id/rate_ic"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like"
                    android:id="@+id/like_ic"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_unlike"
                    android:layout_marginStart="10dp"
                    android:id="@+id/unlike_ic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rate_ic"
                android:orientation="horizontal"
                android:id="@+id/rate_number"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like"
                    android:layout_marginEnd="10dp"
                    style="@style/LogInText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unlike"
                    style="@style/LogInText"/>
            </LinearLayout>
            
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/floating_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rate_number"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:text="@string/edit"
                style="@style/ServicesItem"
                android:contentDescription="@string/fab_content_desc"
                app:icon="@drawable/ic_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>