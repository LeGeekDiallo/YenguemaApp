<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    tools:context=".fragments.UserInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/yenguema_logo"/>
            <ImageButton
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_change_photo_btn"
                android:id="@+id/change_photo"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="210dp"
                android:src="@drawable/user_av_default"
                android:background="@drawable/img_customized"
                android:id="@+id/user_av"/>
            <ImageButton
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_av"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_change_photo_btn"
                android:id="@+id/change_avatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cover"
                app:layout_constraintLeft_toRightOf="@+id/user_av"
                android:layout_marginStart="3dp"
                android:text="@string/username"
                android:padding="5dp"
                style="@style/HomeTitle"
                android:id="@+id/user_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/change_avatar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"
                android:text="@string/user_info"
                style="@style/LogInText"
                android:id="@+id/user_info"/>
            <EditText
                app:layout_constraintTop_toBottomOf="@+id/user_info"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:id="@+id/user_name_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_user_name"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp"
                android:autofillHints="useremail" />
            <EditText
                app:layout_constraintTop_toBottomOf="@+id/user_name_edit"
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp"
                android:autofillHints="useremail" />
            <EditText
                app:layout_constraintTop_toBottomOf="@+id/user_email"
                android:id="@+id/user_phone_number"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:drawableStart="@drawable/ic_contact_phone"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp"
                android:autofillHints="phone" />
            <EditText
                app:layout_constraintTop_toBottomOf="@+id/user_phone_number"
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_password"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp"
                android:autofillHints="password" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_password"
                android:id="@+id/edit_user_info"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>